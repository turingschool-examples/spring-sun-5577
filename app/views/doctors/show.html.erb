<div class="feature-box">
  <h1>Doctor <%= @doctor.name %> Show Page</h1>
  <ul>
    <p>Specialty: <%= @doctor.specialty %></p>
    <p>University Attended: <%= @doctor.university %> </p>
    <p>Current Hospital: <%= @doctor.hospital.name %></p><br>
  </ul>
  <div id="patient-list">
    <h3>List of Patients</h3>
      <% @doctor.patients.each do |patient|%>
        <%= patient.name %><%= button_to "Delete #{patient.name}", "/doctors/#{@doctor.id}/patients/#{patient.id}", method: :delete %>
      <% end %>
  </div>
</div>
